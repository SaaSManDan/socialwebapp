  <br><br>
    <div class="edit-card"><br>
      <center>
      <span style="color: #777777;font-size: 25px;font-weight:bold">Change profile picture</span><br><br>
        <img id="imageholder" src="" alt="your image"/>
        <br><br>
        <form action="/routes/image-upload" method="post" enctype="multipart/form-data">
      <input type="file"  id="imageuploader" name="image" accept="image/*" hidden/>
          <input type="button" class="actualbutton" id="actualbutton" value="Choose new image" />
        <br><br>
      <input type="submit" class="submit" id="submit" value="Update Profile Picture" onsubmit="return false" />
        </form>
          <br><br>
        <span id="submit-response"></span>
        <br>
      </center>
    </div>
    
   <script type="text/javascript">
     
    document.getElementById('actualbutton').addEventListener('click', openDialog);

    function openDialog() {
      document.getElementById('imageuploader').click();
    }
     
    function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();

          reader.onload = function (e) {
            $('#imageholder')
            .attr('src', e.target.result);
          };

          reader.readAsDataURL(input.files[0]);
        }
	  }
     
    </script>
    
    